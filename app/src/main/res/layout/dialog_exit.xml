<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.jucha.pharmacy.ui.login.LoginActivity" />
        <variable
            name="vm"
            type="com.jucha.pharmacy.ui.login.LoginViewModel" />
        <variable
            name="time"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="28dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="42dp"
                android:paddingRight="42dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_bell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="25.5dp"
                    android:fontFamily="@font/nanumsquareotfr"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:text="알림"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="45dp"
                    android:fontFamily="@font/nanumsquareotfr"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="프로그램을 종료하겠습니까?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:onClick="@{() -> activity.onExitClose()}"
                    android:background="@color/gray_f1"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:gravity="center"
                    android:text="아니오"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquareotfb"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:onClick="@{() -> activity.onExit()}"
                    android:background="@color/point1000"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:gravity="center"
                    android:text="예"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquareotfb"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</layout>